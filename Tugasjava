package tampil;
/**
 *
 * @author Windows 10
 */
import java.io.*;
import java.util.ArrayList;
public class tampil {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        InputStreamReader isr = new InputStreamReader(System.in);
        BufferedReader input = new BufferedReader(isr);
        try{
            System.out.println("Aplikasi Pengelolaan Uang Kas");
            ArrayList nim = new ArrayList();
            ArrayList nama = new ArrayList();
            ArrayList uang = new ArrayList();
            ArrayList tanggal = new ArrayList();
            int total =0 ;
        String more;
        do{
            System.out.println("NIM =");
            String n = input.readLine();
            nim.add(n);
            System.out.println("Nama =");
            String m= input.readLine();
            nama.add(m);
            System.out.println("Uang kas =");
            int u = Integer.parseInt(input.readLine());
            uang.add(u);
            System.out.println("tanggal =");
            String t = input.readLine();
            tanggal.add(t);
            System.out.println("Ada lagi (Y/N)");
            more=input.readLine();
        }
        while(more.equals("Y"));
        System.out.println("Hasil = ");
        System.out.println("No |NIM |Nama |Uang kas |tTanggal");
        for(int i = 0; i<nim.size(); i++){
            System.out.println(i+1);
            System.out.println("\t"+nim.get(i));
            System.out.println("\t"+nama.get(i));
            System.out.println("\t"+uang.get(i));
            System.out.println("\t"+tanggal.get(i));
        }
        System.out.println("Nama- nama yang sudah membayar kas");
        for(int j = 0; j<nama.size(); j++){
            System.out.println(j+1);
            System.out.println("\n"+nama.get(j));
    }
    }catch(IOException e){
    System.out.println("ERROR "+e.getMessage());
}
      
}
}
